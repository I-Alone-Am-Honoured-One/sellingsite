<%- include('../partials/header') %>
<section class="container section auth-layout">
  <div class="auth-sidebar">
    <p class="badge">Secure access</p>
    <h1>Welcome back</h1>
    <p class="muted">Sign in to manage your listings, orders, and messages in one place.</p>
    <ul class="auth-benefits">
      <li>Escrow-backed checkout with delivery protection.</li>
      <li>Instant messaging with verified buyers and sellers.</li>
      <li>Track payouts, shipments, and order status updates.</li>
    </ul>
    <div class="auth-support">
      <span class="muted">Need help?</span>
      <a class="link" href="/terms">Read safety guidelines</a>
    </div>
  </div>
  <div class="auth-panel">
    <div class="section-header">
      <div>
        <h2>Sign in</h2>
        <p class="muted">Use your email or username to continue.</p>
      </div>
    </div>
    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>
    <form class="form-card" method="POST" action="/auth/sign-in">
      <label>
        Email or username
        <input
          type="text"
          name="identifier"
          value="<%= identifier || '' %>"
          autocomplete="username"
          placeholder="you@example.com or gamer tag"
          required
        />
        <span class="helper">Use the email or username you registered with.</span>
      </label>
      <label>
        Password
        <input type="password" name="password" autocomplete="current-password" required />
        <span class="helper">Passwords are case-sensitive.</span>
      </label>
      <button class="button primary" type="submit">Sign in</button>
    </form>
    <div class="oauth-buttons">
      <a class="button ghost full-width" href="/auth/google">Continue with Google</a>
    </div>
    <div class="form-footer">
      <a href="/auth/register">Create an account</a>
      <a href="/auth/forgot-password">Forgot your password?</a>
    </div>
  </div>
</section>
<%- include('../partials/footer') %>
