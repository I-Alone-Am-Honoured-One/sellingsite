<%- include('../partials/header') %>
<section class="container section auth-layout">
  <div class="auth-sidebar">
    <p class="badge">Password recovery</p>
    <h1>Reset your password</h1>
    <p class="muted">Enter your email and we’ll send you a 6-digit reset code.</p>
    <ul class="auth-benefits">
      <li>Reset codes expire after 15 minutes for safety.</li>
      <li>Use the code once to create a new password.</li>
      <li>Reach support if you no longer have access.</li>
    </ul>
    <div class="auth-support">
      <span class="muted">Remembered your password?</span>
      <a class="link" href="/auth/sign-in">Back to sign in</a>
    </div>
  </div>
  <div class="auth-panel">
    <div class="section-header">
      <div>
        <h2>Send reset code</h2>
        <p class="muted">We’ll email a short code to verify your account.</p>
      </div>
    </div>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>
    <% if (success) { %>
      <div class="success"><%= success %></div>
    <% } %>

    <form class="form-card" method="POST" action="/auth/forgot-password">
      <label>
        Email address
        <input 
          type="email" 
          name="email" 
          placeholder="your@email.com"
          autocomplete="email"
          required 
        />
      </label>

      <button class="button primary" type="submit">Send Reset Code</button>
    </form>
    <p class="helper">
      Admin note: to send Gmail reset codes, enable 2-Step Verification, create an App Password, and set
      SMTP_HOST=smtp.gmail.com, SMTP_PORT=587, SMTP_USER=your Gmail address, and SMTP_PASS=the app password.
    </p>

    <div class="form-footer">
      <p>Already have a code? <a href="/auth/reset-password">Enter it here</a></p>
      <p style="margin-top: 0.5rem;"><a href="/auth/sign-in">Back to sign in</a></p>
    </div>
  </div>
</section>
<%- include('../partials/footer') %>
